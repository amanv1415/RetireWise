PORT=5001
NODE_ENV=development

# App runtime
MAX_PORT_RETRIES=10
JSON_LIMIT=1mb
URL_ENCODED_LIMIT=1mb
TRUST_PROXY=false

# Database (MongoDB Atlas)
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/retirewise?retryWrites=true&w=majority
# Optional legacy fallback (app supports both)
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/retirewise?retryWrites=true&w=majority

# Auth
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Comma-separated list of allowed frontend origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
