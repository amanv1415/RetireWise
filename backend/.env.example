PORT=5001
NODE_ENV=development

# App runtime
MAX_PORT_RETRIES=10
JSON_LIMIT=1mb
URL_ENCODED_LIMIT=1mb
TRUST_PROXY=false

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=Retirement
DB_USER=root
DB_PASSWORD=

# WARNING: keep false in production unless intentionally running schema migration
DB_SYNC_ALTER=false

# Auth
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Comma-separated list of allowed frontend origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
